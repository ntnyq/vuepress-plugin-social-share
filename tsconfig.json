{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["vuepress-types"],
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./docs/**/*.ts"]
}
