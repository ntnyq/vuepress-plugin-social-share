{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["vuepress-types"],
    "lib": ["DOM", "DOM.Iterable", "ES2015"]
  },
  "include": ["./src"]
}
