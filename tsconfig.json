{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "Commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "types": ["vuepress-types"],
    "lib": ["DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*.ts"]
}
