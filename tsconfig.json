    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": [
      "vuepress-types"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
